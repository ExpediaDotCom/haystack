<configuration>
    <jmxConfigurator/>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss:SSS} %thread, %level, %logger{70},  "%msg" %replace(%ex){'[\n]+', '\\n'}%nopex%n
            </Pattern>
        </layout>
    </appender>

    <logger name="com.expedia.www.haystack.service.graph.graph.builder.app" level="OFF"/>
    <logger name="com.expedia.www.haystack.service.graph.graph.builder.AppSpec" level="OFF"/>

    <root level="${HAYSTACK_LOG_LEVEL:-OFF}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
